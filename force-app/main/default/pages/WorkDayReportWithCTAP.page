                 <tr>
                   
                      <td colspan="1" class="ct" width="5%" bgcolor="white"><apex:outputText value="{!jhr.Job_Number__c}"/></td>
                      <td colspan="1" class="ct" width="10%" bgcolor="{!IF(AND(NOT(ISNULL(jhr.PacK_hours__c)),jhr.PacK_hours__c>0),'white','#ededed')}"><apex:outputText value="{!jhr.Pack_Hours__c}"/></td>
                      
                      <td colspan="1" class="ct" width="10%" style="text-align:center;color:blue;font-weight:bold;"><apex:outputText value="{!jhr.CTAP_Delivered_Hours__c}"/></td>
                      <!--<td colspan="1" class="ct" width="10%" bgcolor="{!IF(AND(NOT(ISNULL(jhr.Overbooked_Hours__c)),jhr.Overbooked_Hours__c>0),'white','#ededed')}"><apex:outputText value="{0, number, 0.00}">-->
                        <!--<apex:param value="{!jhr.Overbooked_Hours__c}" />
                        </apex:outputText><!--<apex:outputText value="{!jhr.Overbooked_Hours__c}"/>
                        </td>-->
                    
                </tr> 
                </apex:repeat>
               </table>
             </apex:outputpanel> 
             </td>
             <td bgcolor="white" >
              <table width="100%" >
                <tr >
                    <td style="text-align:center" width="50%" >{!w.Workdayrep.Start_Job_Total_TT__c}</td>
                    <td style="text-align:center;color:blue;font-weight:bold;" width="50%" >{!w.Workdayrep.Start_Job_Excess_TT__c}</td>
                </tr>
              </table>
             </td>
             <td style="text-align:center;color:blue;font-weight:bold;"><apex:outputText value="{!w.Workdayrep.Total_Travel_Time__c}"/></td>
             <td  bgcolor="white" >
                <table width="100%" >
                <tr >
                  <td style="text-align:center" width="50%" bgcolor="white">{!w.Workdayrep.Job_Start_Total_TT__c}</td>
                  <td style="text-align:center;color:blue;font-weight:bold;" width="50%" >{!w.Workdayrep.Job_Start_Excess_TT__c}</td>
                </tr>
                </table>
            </td>
             <td bgcolor="{!IF(w.Workdayrep.Available_Hours__c>0,'white','')}"><apex:outputText value="{!w.Workdayrep.Available_Hours__c}"/></td>
             <td bgcolor="{!IF(w.Workdayrep.Unavailability_Hours__c>0,'white','')}"><apex:outputText value="{!w.Workdayrep.Unavailability_Hours__c}"/></td>
             <td bgcolor="{!IF(w.Workdayrep.NWD__c>0,'white','')}"><apex:outputText value="{!w.Workdayrep.NWD_Text__c}"/></td>
            </tr>  
            </apex:repeat>  
            
            <tr class="Total" >
