                  <table cellpadding="0" cellspacing="0" class="list" border-collapse="collapse">
                    <colgroup span="3"></colgroup>
                    <thead class="">
                     <tr bgcolor="#FFA57D">
                       <TH colspan="1" class="ct" width="10%">Totals</TH>
                       <TH colspan="1" class="ct" width="10%">{!calTotHours.Tot_Pack_hours}</TH>
                       <TH colspan="1" class="ct" width="10%">{!calTotHours.Tot_CTAP_Hours}</TH>
                       <!--<TH colspan="1" class="ct" width="10%">{!calTotHours.Tot_OB_Hours}</TH>-->
                     </tr>
                    </thead>
                  </table>
              </td>
              <td bgcolor="#FFA57D">
                <table width="100%" >
                  <tr >
                    <td style="text-align:center" width="50%">{!calTotHours.Tot_Start_Job_Total_TT}</td>
                    <td style="text-align:center" width="50%">{!calTotHours.Tot_Start_Job_Execss_TT}</td>
                  </tr>
                  </table>
              </td>
              <td bgcolor="#FFA57D"><apex:outputText value="{!calTotHours.Tot_Travel_Time}"/></td>
              <td bgcolor="#FFA57D" >
                <table width="100%" >
                  <tr >
                    <td style="text-align:center" width="50%">{!calTotHours.Tot_Job_Start_Total_TT}</td>
                    <td style="text-align:center" width="50%">{!calTotHours.Tot_Job_Start_Excess_TT}</td>
                  </tr>
                  </table>

              </td>
              <td bgcolor="#FFA57D"><apex:outputText value="{!calTotHours.Tot_Available_Hours}"/></td>
