             customercategoryindexinputvalue.value = 1;
           }else if(imageSource.indexOf('Emergency_Non_Op') != -1){
             customercategoryindexinputvalue.value = 2;
           }else if(imageSource.indexOf('Non_Op') != -1){
             customercategoryindexinputvalue.value = 3;
